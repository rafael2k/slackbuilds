# build it with slacktrack, example:
#
#   slacktrack -jefkzp "pecl-http-1.0.3-x86_64-1rha.tgz" "./pecl-http.build"
# 

CWD="`pwd`"

if [ -f "/etc/slackbuildrc" ]; then
  source /etc/slackbuildrc
fi

if [ -f "~/.slackbuildrc" ]; then
  source ~/.slackbuildrc
fi

# default settings
PACKAGE="pecl-http"
VERSION=${VERSION:=1.5.3}
ARCH=${ARCH:=i486}
BUILD=${BUILD:=1rha}
SRC_DIR=${SRC:=$CWD}
TMP=${TMP:=/tmp}

RTOOL="wget"
PACKAGE_EXT="tgz"
SRC="pecl_http-$VERSION.$PACKAGE_EXT"
URL="http://pecl.php.net/get/$SRC"

if [ "$ARCH" == "x86_64" ]; then
  export LDFLAGS="-L/lib64 -L/usr/lib64"
  LIBDIR=/usr/lib64
else
  LIBDIR=/usr/lib
fi

# -------  error codes for createpkg  --------------
ERROR_WGET=31;      ERROR_MAKE=32;      ERROR_INSTALL=33
ERROR_MD5=34;       ERROR_CONF=35;      ERROR_HELP=36
ERROR_TAR=37;       ERROR_MKPKG=38;     ERROR_GPG=39
ERROR_PATCH=40

SRC_DIR="$SRC_DIR/$PACKAGE"

if [ ! -d "$SRC_DIR" ]; then
  mkdir -p $SRC_DIR
fi

if [ "$RTOOL" == "wget" ] && [ ! -f "$SRC_DIR/$SRC" ]; then
  wget "$URL" -O "$SRC_DIR/$SRC" || exit $ERROR_WGET
fi

TMP="$TMP/$PACKAGE"

if [ ! -d "$TMP" ]; then
  mkdir -p $TMP
fi

cd $TMP

tar xvf $SRC_DIR/$SRC || exit $ERROR_TAR
cd pecl_http-$VERSION

phpize
./configure --prefix=/usr --sysconfdir=/etc --libdir=$LIBDIR || exit $ERROR_CONF
make || exit $ERROR_MAKE
make install || exit $ERROR_INSTALL

CWD="`pwd`"

mkdir /install

cat << EOF > /install/slack-desc
# HOW TO EDIT THIS FILE:
# The "handy ruler" below makes it easier to edit a package description.  Line
# up the first '|' above the ':' following the base package name, and the '|'
# on the right side marks the last column you can put a character in.  You must
# make exactly 11 lines for the formatting to be correct.  It's also
# customary to leave one space after the ':'.

         |-----handy-ruler-----------------------------------------------------|
pecl-http: pecl-http
pecl-http:
pecl-http: This HTTP extension aims to provide a convenient and powerful set
pecl-http: of functionality for one of PHPs major applications.
pecl-http:
pecl-http: It eases handling of HTTP urls, dates, redirects, headers and
pecl-http: messages, provides means for negotiation of clients preferred
pecl-http: language and charset, as well as a convenient way to send any
pecl-http: arbitrary data with caching and resuming capabilities.
pecl-http:
EOF

# docs
mkdir -p /usr/doc/$PACKAGE-$VERSION

for file in CREDITS README TODO; do
  cp $CWD/$file* /usr/doc/$PACKAGE-$VERSION/
done

cp -R $CWD/docs/* /usr/doc/$PACKAGE-$VERSION/

